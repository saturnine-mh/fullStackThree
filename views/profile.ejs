<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://use.typekit.net/udt8wec.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body id="greyBackProfile">
<div class="profile container">

 

    <div class="profile row">

        <!-- LOCAL INFORMATION -->
  
        <div id="centerMain" class="profile col-sm-6">
            <div class="profile well">
            
                <section>
                  <section>
                <img src="img/homer.gif">
                <div class="col-sm-6">

                  <h1>Check your word</h1>
                <% if (user.local.email) { %>
                  <form action="/messages" method="POST">
                    <input type="text" placeholder="Input Word" name="palindrome">      
                    <button type="submit">Submit</button>
                  </form>
                </div>
                <% } %>
              </div>
            </section>
                <section>
                  <div class="profile well">
                <h1>Is it a Palindrome?</h1>
                <ul class="messages">
                <% for(var i=0; i<messages.length; i++) {%>
                  <li class="message">
                    <section>
                    <h2><%= messages[i].palindrome %> 
                   </h2>
                   <section>
                    <span><%= messages[i].definition %></span>
                  </section>
                  <section>
                    <span><%= messages[i].wordCheck %></span>
                  </section>
                 
                    <form method="PUT">
                       <button class="getDef" type="button">Get Definition</button>
                    </form>
                    <span><i class="profile fa fa-trash-o" aria-hidden="true"></i></span>
                    
                  </section>
                   
  
                 
                  </li>
                <% } %>
                </ul>
              </section>
            </div>
            
        </div>
              </section>



            </section>

            <div id="footerInfo" class="profile page-header text-center">

              <a href="/logout" class="profile btn btn-default btn-sm">Logout</a>
          </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

 


       

<script src="main.js"></script>

</body>
</html>
